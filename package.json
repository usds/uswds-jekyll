{
  "name": "uswds-jekyll",
  "version": "2.0.0",
  "description": "Basic Jekyll scaffold with USWDS and USWDS-Gulp",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/usds/uswds-jekyll.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/usds/uswds-jekyll/issues"
  },
  "homepage": "https://github.com/usds/uswds-jekyll#readme",
  "private": true,
  "scripts": {
    "postinstall": "[ -z \"$SKIP_BUNDLE\" ] && bundle || echo Skipped Ruby Install",
    "start": "bundle exec jekyll serve --livereload",
    "lint": "npm run lint:html && npm run lint:scss",
    "lint:html": "htmllint $(find . -name node_modules -prune -false -o -name '*.html')",
    "lint:scss": "sass-lint --verbose --no-exit",
    "hyde": "bundle exec jekyll hyde",
    "build": "bundle exec jekyll build"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "gulp": "^4.0.2",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "htmllint-cli": "0.0.7",
    "markdownlint-cli": "^0.24.0",
    "postcss-csso": "^4.0.0",
    "sass": "^1.26.10",
    "sass-lint": "^1.13.1",
    "uswds": "^2.8.1",
    "uswds-gulp": "github:uswds/uswds-gulp"
  }
}
